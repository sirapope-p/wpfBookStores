        </Grid>
        <Grid HorizontalAlignment="Left" Height="670" VerticalAlignment="Top" Width="1542" Background="#FF494949" Margin="0,169,-950,-570" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="328*"/>
            </Grid.RowDefinitions>
            <TextBox HorizontalAlignment="Left" Height="26" Margin="52,26,0,0" TextWrapping="Wrap" Text="john1993" VerticalAlignment="Top" Width="177" FontSize="16" Grid.Row="1"/>
            <Label Content="Username" HorizontalAlignment="Left" Height="24" Margin="52,2,0,0" VerticalAlignment="Top" Width="177" Background="{x:Null}" Foreground="White" FontWeight="Bold" Grid.Row="1"/>
            <Button x:Name="btnLogin" Content="LOGIN" HorizontalAlignment="Left" Margin="286,35,0,0" Width="169" Grid.Row="1" Height="63" VerticalAlignment="Top" FontSize="22" BorderBrush="{x:Null}" Click="btnLogin_Click"/>
            <TextBox HorizontalAlignment="Left" Height="26" Margin="52,86,0,0" TextWrapping="Wrap" Text="********" VerticalAlignment="Top" Width="177" FontSize="16" Grid.Row="1"/>
            <Label Content="Password" HorizontalAlignment="Left" Height="24" Margin="52,62,0,0" VerticalAlignment="Top" Width="177" Background="{x:Null}" Foreground="White" FontWeight="Bold" Grid.Row="1"/>
            <Button Content="" HorizontalAlignment="Left" Margin="455,35,0,0" Width="63" Grid.Row="1" Height="63" VerticalAlignment="Top" FontSize="32" BorderBrush="{x:Null}">
                <Button.Foreground>
                    <ImageBrush ImageSource="gearIcon.png"/>
                </Button.Foreground>
                <Button.Background>
                    <ImageBrush ImageSource="gear2.jpg"/>
                </Button.Background>
            </Button>
        </Grid>

    </Grid>
</Window>

